			<option value="1">JL_GLOBAL_YES</option>
		</param>

		<param 	name="show_games_count" type="radio" default="1" 
				label="JL_FES_REFEREES_PARAM_LABEL_SHOW_GAMES_COUNT" 
				description="JL_FES_REFEREES_PARAM_DESCR_SHOW_GAMES_COUNT">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>

