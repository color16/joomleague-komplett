		<param 	name="show_icon" type="radio" default="1" 
				label="JL_FES_REFEREES_PARAM_LABEL_SHOW_ICON" 
				description="JL_FES_REFEREES_PARAM_DESCR_SHOW_ICON">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
