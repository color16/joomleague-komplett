<?xml version="1.0"?>
<templateconfig type="JL_template" version="1.0.0">
  <name><![CDATA[JL_FES_STATS_NAME]]></name>
  <description><![CDATA[JL_FES_STATS_DESCR]]></description>

<params group= "JL_FES_PARAMS_GROUP_PAGE_ELEMENTS" 
		description="JL_FES_PARAMS_DESCR_PAGE_ELEMENTS">

		<param 	name="show_sectionheader" type="radio" default="1" 
				label="JL_FES_PARAM_LABEL_SHOW_SECTIONHEADER" 
				description="JL_FES_PARAM_DESCR_SHOW_SECTIONHEADER">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>

		<param 	name="show_general_stats" type="radio" default="1" 
				label="JL_FES_STATS_PARAM_LABEL_SHOW_GENERAL_STATS" 
				description="JL_FES_STATS_PARAM_DESCR_SHOW_GENERAL_STATS">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		
		<param 	name="home_away_stats" type="radio" default="1" 
				label="JL_FES_STATS_PARAM_LABEL_SHOW_HA_STATS" 
				description="JL_FES_STATS_PARAM_DESCR_SHOW_HA_STATS">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
	
		<param 	name="show_goals_stats" type="radio" default="1" 
				label="JL_FES_STATS_PARAM_LABEL_SHOW_GOAL_STATS" 
				description="JL_FES_STATS_PARAM_DESCR_SHOW_GOAL_STATS">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		
		<param 	name="show_attendance_stats" type="radio" default="0" 
				label="JL_FES_STATS_PARAM_LABEL_SHOW_ATTENDANCE_STATS" 
				description="Shows various attendance statistics, e.g. average number of spectators.">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		
		<param 	name="show_goals_stats_flash" type="radio" default="1" 
				label="JL_FES_STATS_PARAM_LABEL_SHOW_FLASH" 
				description="JL_FES_STATS_PARAM_DESCR_SHOW_FLASH">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		
		<param 	name="show_attendance_ranking" type="radio" default="0" 
				label="JL_FES_STATS_PARAM_LABEL_SHOW_ATTENDANCE_RANK" 
				description="JL_FES_STATS_PARAM_DESCR_SHOW_ATTENDANCE_RANK">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		<param 	name="show_picture" type="list" default="team_picture"
				label="JL_FES_TEAMINFO_SHOW_PICTURE"
				description="JL_FES_TEAMINFO_SHOW_PICTURE_DESC">
			<option value="">JL_FES_TEAMINFO_NO_TEAM_PICTURE</option>
			<option value="team_picture">JL_FES_TEAMINFO_TEAM_PICTURE</option>
			<option value="projectteam_picture">JL_FES_TEAMINFO_PROJECTTEAM_PICTURE</option>
			<option value="logo_small">JL_FES_TEAMINFO_CLUB_LOGO_SMALL</option>
			<option value="logo_middle">JL_FES_TEAMINFO_CLUB_LOGO_MIDDLE</option>
			<option value="logo_big">JL_FES_TEAMINFO_CLUB_LOGO_BIG</option>
		</param>
<!--		
		<param 	name="show_events_stats" type="radio" default="0" 
				label="Show event stats?" 
				description="Shows stats about the events of the selected project. Only funtions in case you are working with events!">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>	
-->		
	</params>
</templateconfig>
