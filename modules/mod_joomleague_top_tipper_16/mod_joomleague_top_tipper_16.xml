<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
    <name>JoomLeague Top Tipper Module 1.6</name>
    <creationDate>2012-05-08</creationDate>
    <author>Dieter Ploeger</author>
    <copyright>Released under GNU/GPL License</copyright>
    <authorEmail>diddipoeler[at]arcor.de</authorEmail>
    <authorUrl>www.fussballineuropa.de</authorUrl>
    <version>1.6a</version>
    <description>This module displays the best prediction game teammates for the choosen project. Please notice: To change the color or font of the tabs edit the joomleague_tabs.css in components/com_joomleague/css/ !</description>
     
     <files>
        <filename module="mod_joomleague_top_tipper_16">mod_joomleague_top_tipper_16.php</filename>
        <filename>index.html</filename>
		    <filename>helper.php</filename>
		    <folder>tmpl</folder>
		    <folder>css</folder>
     </files>
     
  <languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_joomleague_top_tipper_16.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.mod_joomleague_top_tipper_16.ini</language>
	</languages>
	
     <params addpath="/administrator/components/com_joomleague/elements">
      
     			<param	type="jlsql" name="pg" updates="" rawview="" 
					label="JL_MOD_TT_XML_SELECT_PREDICTION_GAME_LABEL"
					description="JL_MOD_TT_XML_SELECT_PREDICTION_GAME_DESCR"
					query="	SELECT	id AS value,
							name AS pg
						FROM #__joomleague_prediction_game
						WHERE published=1
						ORDER BY name" />
						
      
      
      <param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_PROJECT_NAME" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_PROJECT_NAME_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_PROJECT_NAME_DESC">      
       <option value="0">No</option>
		   <option value="1">Yes</option>
		 </param>
		 
		 <param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_PROJECT_NAME_SELECTOR" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_PROJECT_NAME_SELECTOR_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_PROJECT_NAME_SELECTOR_DESC">      
       <option value="0">No</option>
		   <option value="1">Yes</option>
		 </param>
           
      <param name="JL_MOD_TT_XML_PREDICTION_GAME_LIMIT" type="text" default="5" label="JL_MOD_TT_XML_PREDICTION_GAME_LIMIT_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_LIMIT_DESC" />

    <param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_RANKING_NAV" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_RANKING_NAV_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_RANKING_NAV_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
         		 
		<param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_ALL_USER" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_ALL_USER_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_ALL_USER_DESC_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>

		<param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_USER_ICON" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_USER_ICON_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_USER_ICON_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		
		<param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_USER_LINK" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_USER_LINK_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_USER_LINK_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		
		<param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_TIP_DETAILS" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_TIP_DETAILS_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_TIP_DETAILS_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		
    <param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_TIP_RANKING" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_TIP_RANKING_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_TIP_RANKING_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
    
    <param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_TIP_RANKING_ROUNDID" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_TIP_RANKING_ROUNDID_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_TIP_RANKING_ROUNDID_DESC">
			<option value="0">JL_MOD_TT_XML_PREDICTION_GAME_SHOW_TIP_RANKING_ROUNDID_ALL</option>
			<option value="1">JL_MOD_TT_XML_PREDICTION_GAME_SHOW_TIP_RANKING_ROUNDID_CURRENT</option>
		</param>
    
		<param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_AVERAGE_POINTS" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_AVERAGE_POINTS_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_AVERAGE_POINTS_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_TIPS" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_TIPS_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_TIPS_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_JOKER" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_JOKER_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_JOKER_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_TOPP_TIPS" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_TOPP_TIPS_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_TOPP_TIPS_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_DIFF_TIPS" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_DIFF_TIPS_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_DIFF_TIPS_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_TEND_TIPS" type="radio" default="0" label="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_TEND_TIPS_LABEL" description="JL_MOD_TT_XML_PREDICTION_GAME_SHOW_COUNT_TEND_TIPS_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>

     
      <param	name="show_debug_modus" type="radio" default="0"
				label="JL_FES_PREDICTIONRANKING_PARAM_LABEL_SHOW_DEBUG_RANKINGNAV"
				description="JL_FES_PREDICTIONRANKING_PARAM_DESCR_SHOW_DEBUG_RANKINGNAV">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
     
      <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="A suffix to be applied to the css class of the module (normally just \'table.moduletable\'), this allows individual module styling" />        
     
     </params>
     
</install>
