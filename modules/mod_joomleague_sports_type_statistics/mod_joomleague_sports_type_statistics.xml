<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>JoomLeague sports type statistics</name>
	<author>And_One</author>
	<authorEmail>andone@mfga.at</authorEmail>
	<authorUrl>http://www.mfga.at</authorUrl>
	<creationDate>2012-04-02</creationDate>
	<copyright>Copyright (c) 2012 JoomLeague Developers</copyright>
	<license>GNU GPL v3</license>
	<version>1.5.4-alena</version>
	<description>MOD_JLG_SPORTS_TYPE_STATISTICS_MODULE_DESC</description>

	<files>
		<filename module="mod_joomleague_sports_type_statistics">mod_joomleague_sports_type_statistics.php
		</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<folder>css</folder>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_joomleague_sports_type_statistics.ini
		</language>
	</languages>

	<params addpath="/administrator/components/com_joomleague/elements">
		<param name="sportstypes" type="sportstypes" default=""
			label="MOD_JLG_SPORTS_TYPE_STATISTICS_SPORTS_TYPE_LABEL" description="MOD_JLG_SPORTS_TYPE_STATISTICS_SPORTS_TYPE_DESC" />

		<param name="show_project" type="radio" default="1"
			label="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_PROJECTS" description="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_PROJECTS_DESC">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		<param name="show_leagues" type="radio" default="1"
			label="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_LEAGUES" description="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_LEAGUES_DESC">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		<param name="show_seasons" type="radio" default="1"
			label="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_SEASONS" description="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_SEASONS_DESC">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		<param name="show_teams" type="radio" default="1"
			label="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_TEAMS" description="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_TEAMS_DESC">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		<param name="show_players" type="radio" default="1"
			label="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_PLAYERS" description="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_PLAYERS_DESC">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		<param name="show_divisions" type="radio" default="1"
			label="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_DIVISIONS" description="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_DIVISIONS_DESC">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		<param name="show_rounds" type="radio" default="1"
			label="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_ROUNDS" description="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_ROUNDS_DESC">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		<param name="show_matches" type="radio" default="1"
			label="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_MATCHES" description="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_MATCHES_DESC">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		<param name="show_player_events" type="radio" default="1"
			label="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_PLAYER_EVENTS" description="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_PLAYER_EVENTS_DESC">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
		<param name="show_player_stats" type="radio" default="1"
			label="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_PLAYER_STATS" description="MOD_JLG_SPORTS_TYPE_STATISTICS_SHOW_PLAYER_STATS_DESC">
			<option value="0">JL_GLOBAL_NO</option>
			<option value="1">JL_GLOBAL_YES</option>
		</param>
	</params>

	<params 	group="advanced">
		<param 	name="cache" type="list" default="1" 
				label="CACHING"
				description="CACHING DESC">
			<option value="1">USE GLOBAL</option>
			<option value="0">NO CACHING</option>
		</param>
		
		<param 	name="cache_time" type="text" default="900" 
				label="CACHE TIME"
				description="CACHE TIME DESC">
		</param>		
				
		<param 	name="moduleclass_sfx" type="text" default=""
				label="Module Class Suffix" 
				description="PARAMMODULECLASSSUFFIX">
		</param>		
	</params>

</install>
