  <version>1.0</version>
  <description>PLUGIN DESC</description>

  <files>
    <filename plugin="comments">comments.php</filename>
  </files>

  <languages>
    <language tag="en-GB">languages/en-GB.plg_joomleague_comments.ini</language>
  </languages>

   <params>
	   <param name="separate_comments" type="radio" default="0"
